// components/input.templ
package input

templ Input(name, inputType, placeholder string) {
	<input
		type={ inputType }
		name={ name }
		id={ name }
		placeholder={ placeholder }
	/>
}

templ InputWithLabel(name, inputType, label, placeholder string) {
	<div>
		<label for={ name }>{ label }</label>
		<input
			type={ inputType }
			name={ name }
			id={ name }
			placeholder={ placeholder }
		/>
	</div>
}
